<p id="notice"><%= notice %></p>


<%= form_with scope: :plan, url: plans_path, local: true do |form| %>
<h1>Plans</h1>

<%= form.date_select :date %>

<table>
  <thead>
  	  <th></th>
      <th>Breakfast</th>
      <th>Calories</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_b.each do |food| %>
      <tr>
      	<td><%= form.radio_button :food_id, "#{food.id}" %> </td>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= food.price %> </td>
      </tr>
     <% end %>
  </tbody>
</table>


