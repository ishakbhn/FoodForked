<div id="listingbg">

<p id="notice"><% notice %></p>


<%= form_with scope: :plan, url: plans_path, local: true do |form| %>
<h3 class="header"><%= Time.now.strftime("%d-%m-%Y") %></h3>

<%= form.date_select :date %>

<div class="container-fluid px-5 mt-5" id="listingrow">
<table>
  <thead>
  	  <th></th>
      <th class="pl-3 text-uppercase text semibold">Breakfast</th>
      <th class="listingspace listingsubhead">Calories</th>
      <th class="listingspace listingsubhead">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_b.each do |food| %>
      <tr>
      	<td><%= form.radio_button :food_id, "#{food.id}" %> </td>
        <td class="pl-3 ft-12"><%= food.name %></td>
        <td class="listingspace ft-12 text-center"><%= food.calories %></td>
        <td class="listingspace ft-12 text-center">$<%= food.price %> </td>
      </tr>
     <% end %>
  </tbody>
</table>


<table class="listingcenter">
  <thead>
    <tr>
      <th></th>
      <th class="pl-3 text-uppercase text semibold">Lunch</th>
      <th class="listingspace listingsubhead">Calories</th>
      <th class="listingspace listingsubhead">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_l.each do |food| %>
      <tr>
      	<td><%= form.radio_button :lunch_id, "#{food.id}" %></td>
        <td class="pl-3 ft-12"><%= food.name %></td>
        <td class="listingspace ft-12 text-center"><%= food.calories %></td>
        <td class="listingspace ft-12 text-center">$<%= food.price %> </td>
        <% end %>
      </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
    	<th></th>
      <th class="pl-3 text-uppercase text semibold">Dinner</th>
      <th class="listingspace listingsubhead">Calories</th>
      <th class="listingspace listingsubhead">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_d.each do |food| %>
      <tr>
      	<td><%= form.radio_button :dinner_id, "#{food.id}" %></td>
        <td class="pl-3 ft-12"><%= food.name %></td>
        <td class="listingspace ft-12 text-center"><%= food.calories %></td>
        <td class="listingspace ft-12 text-center">$<%= food.price %> </td>
      </tr>
     <% end %>
  </tbody>
</table>
</div>
	<p>
    <div id="listingsubmit" class="pt-5"><%= form.submit %></div>
  </p>
<% end %>

</div>
