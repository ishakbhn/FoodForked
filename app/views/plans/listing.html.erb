<div id="listingbg" class="col-container">

<p id="notice"><% notice %></p>


<%= form_with scope: :plan, url: plans_path, local: true do |form| %>
<h3 class="header"><span id="todaysdate">Today's date:</span><%= Time.now.strftime("%d-%m-%Y") %></h3>

<div class="hide">
<%= form.date_select :date %>
</div>

<div class="container-fluid" id="listingrow">

    <ul id="bf">
        <li>BREAKFAST</li>
        <li>LUNCH</li>
        <li>DINNER</li>
    </ul>



<table class="col" style="background:#f9f9f9">
  <thead>
  	  <th></th>
      <th class="pl-3 pt-5 listingsubhead">Selection</th>
      <th class="listingspace listingsubhead">Calories</th>
      <th class="listingspace listingsubhead">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_b.each do |food| %>
      <tr>
      	<td><%= form.radio_button :food_id, "#{food.id}" %> </td>
        <td class="pl-3 ft-14"><%= food.name %></td>
        <td class="listingspace ft-14 text-center"><%= food.calories %></td>
        <td class="listingspace ft-14 text-center">$<%= food.price %> </td>
      </tr>
     <% end %>
  </tbody>
</table>


