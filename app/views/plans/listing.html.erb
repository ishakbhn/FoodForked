<p id="notice"><%= notice %></p>

<%= form_with scope: :plan, url: plans_path, local: true do |form| %>
<h1>Plans</h1>

<%= form.date_select :date %>

<table>
  <thead>
      <th>Breakfast</th>
      <th>Calories</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_b.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= food.price %> </td>
      </tr>
     <% end %>
  </tbody>
</table>
			<p><%= form.collection_select :food_id, @foods_b,:id, :name %></p>

<table>
  <thead>
    <tr>
      <th>Lunch</th>
      <th>Calories</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_l.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= food.price %> </td>
        <% end %>
      </tr>
  </tbody>
</table>
			<p><%= form.collection_select :lunch_id, @foods_l,:id, :name %></p>

<table>
  <thead>
    <tr>
      <th>Dinner</th>
      <th>Calories</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @foods_d.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= food.price %> </td>
      </tr>
     <% end %>
  </tbody>
</table>
		<p><%= form.collection_select :dinner_id, @foods_d,:id, :name %></p>

	<p>
    <%= form.submit %>
  </p>
<% end %>