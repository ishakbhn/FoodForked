<p id="notice"><%= notice %></p>

<h1>Plans</h1>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Breakfast</th>
      <th>Lunch</th>
      <th>Dinner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>

    <% lunch = plan.lunch_id.to_i - 1 %>
    <% dinner = plan.dinner_id.to_i - 1 %>

      <tr>
        <td><%= plan.date %></td>
        <td><%= plan.food.name %></td>
        <td><%= @foods[lunch].name %></td>
        <td><%= @foods[dinner].name  %></td>
      </tr>

      <tr>
      <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>