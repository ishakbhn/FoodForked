<p id="notice"><%= notice %></p>

<h1>Plans</h1>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Calories</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>

    <% lunch = plan.lunch_id.to_i - 1 %>
    <% dinner = plan.dinner_id.to_i - 1 %>
    <% total = 0
		total = @foods[dinner].price + @foods[lunch].price + plan.food.price %>

		<% calories = 0
		calories = @foods[dinner].calories + @foods[lunch].calories + plan.food.calories %>

      <tr>
        <td><%= plan.date %></td>
        <td><%= calories %> cal</td>
        <td>$<%= total %></td>
      </tr>

      <tr>
      <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>