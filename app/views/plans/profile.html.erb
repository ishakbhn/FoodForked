<p id="notice"><%= notice %></p>

<h1>Plans</h1>
<%= link_to 'log out', destroy_user_session_url, method: :delete %>
<%= link_to 'New Plan', new_plan_path %>
<table>
  <thead>
    <tr>

      <th><%= sortable "date" %></th>
      <th><%= sortable "breakfast" %></th>
      <th><%= sortable "lunch" %></th>
      <th><%= sortable "dinner" %></th>

      <th>Date</th>
      <th>Calories</th>
      <th>Price</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>

    <% lunch = plan.lunch_id.to_i - 1 %>
    <% dinner = plan.dinner_id.to_i - 1 %>
    <% total = 0
		total = @foods[dinner].price + @foods[lunch].price + plan.food.price %>

		<% calories = 0
		calories = @foods[dinner].calories + @foods[lunch].calories + plan.food.calories %>

      <tr>
        <td><%=  link_to plan.date, plan %></td>
        <td><%= calories %> cal</td>
        <td>$<%= total %></td>
      </tr>

      <tr>

    </tr>



    <% end %>
  </tbody>
</table>

<br>