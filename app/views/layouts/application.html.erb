<!DOCTYPE html>
<html>
  <head>
    <title>Project3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Source+Sans+Pro:400,600" rel="stylesheet">
  </head>

  <body>

<nav class="navbar navbg sticky-top">
    <div class="container-fluid">
    <ul class="navbar-nav">
        <li class="nav-item">
            <div class="home"><%= link_to root_path do %>
                <span class="homecolor">Food</span>Forked.</div>
            <% end %>
        </li>
    </ul>

    <ul class="nav">

        <li class="nav-item">
        	<% if user_signed_in? %>
        		<i class="fa fa-user"></i>
        			<%= current_user.email%>
        		<a class="nav navmgn" href="#">
        			<%= link_to 'My Profile', profile_url, method: :get %>
          	  <%= link_to 'Log out', destroy_user_session_url, method: :delete %> </a>
					<% else  %>
								<a class="nav navmgn" href="#"> <%= link_to 'Log in', new_user_session_url, method: :get%> </a>
					<% end %>
        </li>
    </ul>

    </div>
</nav>
    <%= yield %>
  </body>
</html>