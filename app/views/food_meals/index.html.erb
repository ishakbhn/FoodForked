<p id="notice"><%= notice %></p>

<h1>Food Meals</h1>

<table>
  <thead>
    <tr>
      <th>Meal</th>
      <th>Breakfast</th>
      <th>Lunch</th>
      <th>Dinner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_meals.each do |food_meal| %>
      <tr>
        <td><%= food_meal.meal %></td>
        <td><%= food_meal.breakfast_id %></td>
        <td><%= food_meal.lunch_id %></td>
        <td><%= food_meal.dinner_id %></td>
        <td><%= link_to 'Show', food_meal %></td>
        <td><%= link_to 'Edit', edit_food_meal_path(food_meal) %></td>
        <td><%= link_to 'Destroy', food_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food Meal', new_food_meal_path %>
